{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2019",
    "outDir": "./dist",
    "baseUrl": "./",
    "strict": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "types": ["node", "express"],
    "esModuleInterop": true,                 // <-- add
    "allowSyntheticDefaultImports": true     // <-- add
  },
  "include": ["src/**/*", "prisma/**/*"]
}
